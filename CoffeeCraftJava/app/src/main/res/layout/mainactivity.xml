<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant"
            android:gravity="center"
            android:text="CoffeeCraft"
            android:textAlignment="center"
            android:textColor="@color/coffee"
            android:textSize="28sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@mipmap/logo" />

    </LinearLayout>

    <!-- Button for suggesting coffee -->
    <Button
        android:id="@+id/suggestCoffeeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggest Coffee"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <!-- Option menu for selecting feelings (initially invisible) -->
    <Spinner
        android:id="@+id/feelingsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible">
        <!-- Add options for feelings here -->
    </Spinner>

    <!-- Checkboxes for selecting sugar and aromas (initially invisible) -->
    <CheckBox
        android:id="@+id/sugarCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugar"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/aromasCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aromas"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/debugTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</LinearLayout>
